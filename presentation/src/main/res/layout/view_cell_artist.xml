<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_login_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recyclerview_item_artist_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Nightwish" />

            <View
                android:layout_width="0.7sp"
                android:layout_height="15sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/recyclerview_item_artist_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="12dp"
                android:ellipsize="end"
                android:text="Disco Once" />

            <TextView
                android:id="@+id/recyclerview_item_artist_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/activity_login_container"
                android:text="US$ 200"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_login_container"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recyclerview_item_artist_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/activity_login_container">

                <TextView
                    android:id="@+id/recyclerview_item_artist_prospect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Nightwish"
                    android:textSize="@dimen/recyclerview_item_post_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recyclerview_item_artist_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Once"
                    android:textSize="@dimen/recyclerview_item_post_body" />

                <TextView
                    android:id="@+id/recyclerview_item_artist_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="40:32"
                    android:textSize="@dimen/recyclerview_item_post_body" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

